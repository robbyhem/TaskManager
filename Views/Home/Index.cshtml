@{
    var email = User.Identity?.Name;
    var userName = email?.Split('@')[0];
    var userRole = User.IsInRole("Admin") ? "Admin" : User.IsInRole("User") ? "User" : "Guest";

    var greeting = $"Welcome {userName} ({userRole.ToUpper()} Dashboard)";

    ViewData["Title"] = greeting;
}

<h1 class="py">@ViewData["Title"]</h1>

<div class="dashboard py-5">
    @if (Model.UserRole == "Admin")
    {
        <div class="row">
            <div class="col-md-3">
                <div class="card text-bg-primary mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-users"></i><span>@Model.TotalUsers Employees</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-success mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-tasks"></i><span>@Model.TotalTasks All Tasks</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-warning mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-window-close-o"></i><span>@Model.OverdueTasks Overdue</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-danger mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-clock-o"></i><span>@Model.NoDeadlineTasks No Deadline</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-primary mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-exclamation-triangle"></i><span>@Model.TodayDueTasks Due Today</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-success mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-bell"></i><span>@Model.OverdueTasks Notifications</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-warning mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-square-o"></i><span>@Model.PendingTasks Pending</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-danger mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-spinner"></i><span>@Model.InProgressTasks In Progress</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-danger mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-check-square-o"></i><span>@Model.CompletedTasks Completed</span></div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-3">
                <div class="card text-bg-primary mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-users"></i><span>@Model.MyTasks My Tasks</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-success mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-tasks"></i><span>@Model.OverdueTasks Overdue</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-warning mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-window-close-o"></i><span>@Model.NoDeadlineTasks No Deadline</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-danger mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-clock-o"></i><span>@Model.PendingTasks Pending</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-primary mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-exclamation-triangle"></i><span>@Model.InProgressTasks In Progress</span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-bg-success mb-3">
                    <div class="card-body text-center">
                        <div class="dashboard-item"><i class="fa fa-bell"></i><span>@Model.CompletedTasks Completed</span></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const active = document.querySelector("#navList li:nth-child(1)");
            if (active) active.classList.add("active");
        });
    </script>
}




