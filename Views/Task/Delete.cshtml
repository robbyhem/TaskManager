@using TaskManager.ViewModels;
@model TaskViewModel;

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-4">
    <h4 class="text-danger mb-3">Delete Task</h4>

    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this task?</strong>
    </div>

    <div class="card p-3">
        <h5>@Model.Title</h5>
        <p>@Model.Description</p>
        <p><strong>Assigned To:</strong> @Model.AssignedToUser.FullName</p>
        <p><strong>Due Date:</strong> @Model.Deadline.ToString("yyyy-MM-dd")</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
