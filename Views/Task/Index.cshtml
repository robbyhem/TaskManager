@model IEnumerable<TaskManager.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "All Tasks";
}

<div class="container mt-4">
    <h4 class="d-flex justify-content-between align-items-center">
        <span>@ViewBag.HeaderText (@ViewBag.TaskCount)</span>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create Task</a>
            <a asp-action="Index" asp-route-deadline="Due Today" class="btn btn-outline-secondary">Due Today</a>
            <a asp-action="Index" asp-route-deadline="Overdue" class="btn btn-outline-secondary">Overdue</a>
            <a asp-action="Index" asp-route-deadline="No Deadline" class="btn btn-outline-secondary">No Deadline</a>
            <a asp-action="Index" class="btn btn-outline-secondary">All Tasks</a>
        </div>
    </h4>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Filter and Search Bar -->
    <form method="get" asp-action="Index" class="row mb-3">
        <div class="col-md-3">
            <label>Status</label>
            <select name="status" class="form-control" onchange="this.form.submit()">
                @foreach (var status in ViewBag.StatusList as List<string>)
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Priority</label>
            <select name="priority" class="form-control" onchange="this.form.submit()">
                @foreach (var priority in ViewBag.PriorityList as List<string>)
                {
                    <option value="@priority">@priority</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Assigned To</label>
            <select name="assignedTo" class="form-control" onchange="this.form.submit()">
                <option value="All">All</option>
                @foreach (var user in ViewBag.UserList as SelectList)
                {
                    <option value="@user.Value">@user.Text</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label>Search</label>
            <input type="text" name="search" class="form-control" placeholder="Search by name, title or description" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Search</button>
        </div>
    </form>

    <!-- Sortable Table -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>S/N</th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSort">Title</a></th>
                    <th>Description</th>
                    <th>Assigned To</th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.PrioritySort">Priority</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSort">Due Date</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewBag.StatusSort">Status</a>></th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var task in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.AssignedTo</td>
                            <td>
                                @if (task.Priority == "Critical")
                                {
                                    <span class="badge bg-black">Critical</span>
                                }
                                else if (task.Priority == "High")
                                {
                                    <span class="badge bg-danger">High</span>
                                }
                                else if (task.Priority == "Medium")
                                {
                                    <span class="badge bg-warning text-dark">Medium</span>
                                }
                                else if (task.Priority == "Low")
                                {
                                    <span class="badge bg-success">Low</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">None</span>
                                }
                            </td>
                            <td>@(task.Deadline?.ToString("yyyy-MM-dd") ?? "No Deadline")</td>
                            <td>
                                @if (task.Status == "Pending")
                                {
                                    <span class="badge bg-primary">Pending</span>
                                }
                                else if (task.Status == "In Progress")
                                {
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                }
                                else if (task.Status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (task.Status == "Overdue")
                                {
                                    <span class="badge bg-danger text-dark">Overdue</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">None</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this task?');">Delete</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
        <!-- Back Button -->
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
    }
    else
    {
        <h5 class="mt-4 text-center text-muted">No task found.</h5>
    }
</div>
